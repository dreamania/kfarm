<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">회원 정보 수정</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <%= form_for([:mentor, @user]) do |f| %>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <fieldset>
            <legend>기본정보</legend>
            <div class="control-group">
              <label class="control-label" for="focusedInput">비밀번호</label>
              <div class="controls">
                <%= f.password_field :password, id: "focusedInput", class: "input-xlarge focused"%>
              </div>
            </div>
            <div class="form-actions">
              <%= f.submit class: "btn btn-primary"  %>
              <%= link_to "취소", admin_path, class: "btn"%>
            </div>
          </fieldset>

        <% end %>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>